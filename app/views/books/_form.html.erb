<%= simple_form_for(@book_new) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, required: true %>
    <%= f.input :author, required: true %>
    <%= f.input :description, label: 'Benefits I got', as: :text,required: true %>
    <%= f.input :progress, as: :select, collection: book_progress, selected: '0%', required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "submit_btn" %>
  </div>
<% end %>
