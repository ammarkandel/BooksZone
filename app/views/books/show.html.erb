<h1><%= @book.title %></h1>

<ul>
  <%= book_change_status(@book) %>
  <%= book_change_privacy(@book) %>
</ul>

<h3>Comments</h3>
<%= render partial: "comments/form", locals: {commentable: @book} %>
<% @book.comments.each do |comment| %>
  <div><%= comment.body %></div>
  <div><%= comment.user.name %></div>
<% end %>
